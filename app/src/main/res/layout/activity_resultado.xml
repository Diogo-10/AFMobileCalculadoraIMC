<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Azul"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/numero1"
        android:textColor="@color/VerdeAgua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Calcule seu IMC"
        android:textSize="30sp"
        android:layout_marginTop="130dp" />

    <EditText
        android:id="@+id/pesoEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border"
        android:hint="Digite seu peso:"
        android:textColorHint="@color/VerdeAgua"
        android:textColor="@color/VerdeAgua"
        android:inputType="number"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/alturaEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border"
        android:layout_below="@+id/pesoEdit"
        android:layout_marginTop="25dp"
        android:hint="Digite sua altura:"
        android:textColorHint="@color/VerdeAgua"
        android:textColor="@color/VerdeAgua"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp" />



    <Button
        android:id="@+id/calcularButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/alturaEdit"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        android:layout_centerHorizontal="true"
        android:text="Calcular"
        android:textColor="@color/VerdeAgua"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calcularButton"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="Resetar"
        android:textColor="@color/VerdeAgua"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/numero4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O resultado do seu IMC Ã©:"
        android:textColor="@color/VerdeAgua"
        android:layout_below="@id/resetButton"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/resultadoIMC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border"
        android:layout_below="@+id/numero4"
        android:layout_marginTop="25dp"
        android:inputType="none"
        android:focusable="false"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>